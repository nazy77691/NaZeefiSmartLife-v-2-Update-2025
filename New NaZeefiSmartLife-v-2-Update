<script type="module">
import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-app.js";
import { getFirestore, collection, addDoc, getDocs, query, orderBy, serverTimestamp, onSnapshot } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-firestore.js";
import { getAuth, createUserWithEmailAndPassword, signInWithEmailAndPassword, signOut, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-auth.js";

// Firebase Config
const firebaseConfig = {
    apiKey: "AIzaSyBKNf4vKh5pvtz3pp7tVwO7NCWTS_vFzJE",
    authDomain: "nazeefismartlife.firebaseapp.com",
    projectId: "nazeefismartlife",
    storageBucket: "nazeefismartlife.firebasestorage.app",
    messagingSenderId: "751096130892",
    appId: "1:751096130892:web:95cf7eb038b32313d673e9"
};

// Initialize Firebase
const app = initializeApp(firebaseConfig);
const db = getFirestore(app);
const auth = getAuth(app);

// DOM Elements
const signInUpBtn = document.getElementById('signInUpBtn');
const signOutBtn = document.getElementById('signOutBtn');
const userStatus = document.getElementById('userStatus');
const authSection = document.getElementById('authSection');
const authEmail = document.getElementById('authEmail');
const authPassword = document.getElementById('authPassword');
const authActionBtn = document.getElementById('authActionBtn');
const authMessage = document.getElementById('authMessage');
const createPostArea = document.getElementById('createPostArea');
const postContent = document.getElementById('postContent');
const postBtn = document.getElementById('postBtn');
const postsData = document.getElementById('postsData');
const usersData = document.getElementById('usersData');

// Show / Hide Auth Section
signInUpBtn.addEventListener('click', () => {
    authSection.style.display = authSection.style.display === 'none' ? 'block' : 'none';
});

// Sign Out
window.handleSignOut = () => {
    signOut(auth).then(() => {
        userStatus.textContent = 'Signed Out';
        signOutBtn.style.display = 'none';
        signInUpBtn.style.display = 'inline-block';
        createPostArea.style.display = 'none';
    });
};

// Handle Sign In / Sign Up
window.handleAuthAction = (isSignUp) => {
    const email = authEmail.value;
    const password = authPassword.value;

    if (!email || !password) {
        authMessage.textContent = 'Please fill in all fields.';
        return;
    }

    if (isSignUp) {
        createUserWithEmailAndPassword(auth, email, password)
        .then(userCredential => {
            authMessage.textContent = '';
            authSection.style.display = 'none';
        })
        .catch(error => {
            authMessage.textContent = error.message;
        });
    } else {
        signInWithEmailAndPassword(auth, email, password)
        .then(userCredential => {
            authMessage.textContent = '';
            authSection.style.display = 'none';
        })
        .catch(error => {
            authMessage.textContent = error.message;
        });
    }
};

// Auth State Change
onAuthStateChanged(auth, (user) => {
    if (user) {
        userStatus.textContent = user.email;
        signOutBtn.style.display = 'inline-block';
        signInUpBtn.style.display = 'none';
        createPostArea.style.display = 'block';
        loadPosts();
        loadUsers();
        addUserIfNotExist(user.email);
    } else {
        userStatus.textContent = 'Signed Out';
        signOutBtn.style.display = 'none';
        signInUpBtn.style.display = 'inline-block';
        createPostArea.style.display = 'none';
    }
});

// Create Post
postBtn.addEventListener('click', async () => {
    const content = postContent.value.trim();
    if (!content) return;
    await addDoc(collection(db, 'posts'), {
        content,
        author: auth.currentUser.email,
        timestamp: serverTimestamp()
    });
    postContent.value = '';
});

// Load Posts
async function loadPosts() {
    postsData.innerHTML = '';
    const q = query(collection(db, 'posts'), orderBy('timestamp', 'desc'));
    onSnapshot(q, snapshot => {
        postsData.innerHTML = '';
        snapshot.forEach(doc => {
            const post = doc.data();
            const card = document.createElement('div');
            card.classList.add('card');
            card.innerHTML = `<strong>${post.author}</strong><p>${post.content}</p>`;
            postsData.appendChild(card);
        });
    });
}

// Load Users
async function loadUsers() {
    usersData.innerHTML = '';
    const q = collection(db, 'users');
    onSnapshot(q, snapshot => {
        usersData.innerHTML = '';
        snapshot.forEach(doc => {
            const user = doc.data();
            const card = document.createElement('div');
            card.classList.add('card');
            card.textContent = user.email;
            usersData.appendChild(card);
        });
    });
}

// Add current user to users collection on sign up if not exist
async function addUserIfNotExist(email) {
    const userRef = collection(db, 'users');
    const snapshot = await getDocs(userRef);
    const exists = snapshot.docs.some(d => d.data().email === email);
    if (!exists) {
        await addDoc(userRef, { email, timestamp: serverTimestamp() });
    }
}

// Dark Mode
const darkModeBtn = document.getElementById('darkModeBtn');
darkModeBtn.addEventListener('click', () => {
    document.body.classList.toggle('dark-mode');
});
</script>
</body>
